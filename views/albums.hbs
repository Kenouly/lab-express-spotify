<div class="album-intro">
    <p>Albums for: {{albums.[0].artists.[0].name}}</p>
</div>

<div class="container-albums">
{{#each albums}}
    <div class="container-album">
        <img src="{{this.images.[1].url}}" alt="{{this.name}}">
        <div class="container-album-info">
            <p>{{this.name}}</p>
            <a href="/tracks/{{this.id}}">See the Tracks</a>
        </div>
    </div>
{{/each}}
</div>